{
  "name": "golf-3-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "backend",
      "frontend"
    ],
    "nohoist": [
      "backend/sqlite3",
      "backend/**/sqlite3",
      "backend/**/sqlite3/**"
    ]
  },
  "scripts": {
    "start:backend": "yarn workspace backend start",
    "start:frontend": "yarn workspace frontend start",
    "start": "concurrently --raw \"yarn workspace backend start\" \"yarn workspace frontend start\"",
    "rebuild-native": "yarn workspace backend run rebuild-native"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "resolutions": {
    "brace-expansion": "4.0.1",
    "serve-static": "1.16.2",
    "cookie": "0.7.2",
    "send": "0.19.0",
    "mime": "1.6.0"
  }
}
