{
  "name": "golf-3-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "backend",
      "frontend"
    ],
    "nohoist": [
      "backend/sqlite3",
      "backend/**/sqlite3",
      "backend/**/sqlite3/**"
    ]
  },
  "scripts": {
    "start:backend": "yarn workspace backend start",
    "start:frontend": "yarn workspace frontend start",
    "start": "concurrently \"yarn workspace backend start\" \"yarn workspace frontend start\"",
    "rebuild-native": "yarn workspace backend run rebuild-native"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
